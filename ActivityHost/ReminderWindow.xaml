<Window x:Class="ActivityHost.ReminderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ActivityHost"
        mc:Ignorable="d"
        Title="ReminderWindow" MinHeight="200" MinWidth="400" MaxHeight="200" MaxWidth="400" WindowStyle="None" WindowStartupLocation="CenterScreen" Topmost="True" AllowsTransparency="True" >

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" CornerRadius="10" ResizeBorderThickness="{x:Static SystemParameters.WindowResizeBorderThickness}" />
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <Style TargetType="Button" x:Key="RoundBtn">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontFamily" Value="Leelawadee UI" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Name="bdr_btn_cc" CornerRadius="20" BorderThickness="0" Background="RoyalBlue" Width="100" Height="40">
                            <ContentPresenter x:Name="content" Margin="0" Content="{TemplateBinding Content}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bdr_btn_cc" Property="Background" Value="#9a9a9a"/>                                
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bdr_btn_cc" Property="Background" Value="#ababab"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Window.Background>
        Black
    </Window.Background>
    
    <Grid>
        <MediaElement x:Name="me" />

        <Border Opacity="0.65" CornerRadius="15" >
            <Border.Background>
                <LinearGradientBrush StartPoint="1,0" EndPoint="0,1">
                    <LinearGradientBrush.GradientStops>
                        <GradientStop Offset="1" Color="Blue" />
                        <GradientStop Offset="0.1" Color="lime" />
                        <GradientStop Offset="0.0" Color="GreenYellow" />
                    </LinearGradientBrush.GradientStops>
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <BlurEffect Radius="50" />
            </Border.Effect>
            <TextBlock Text="Hallo" FontSize="16" />
        </Border>

        <TextBlock x:Name="tbReminder" Text="Reminder" FontSize="24" FontWeight="Medium" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="20,30,20,0" Foreground="White"/>

        <Grid Height="60" Width="300" VerticalAlignment="Bottom" Margin="0,0,0,20">
            
            <Button Style="{StaticResource RoundBtn}" x:Name="dismissBTN" Content="Dismiss" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10" Click="dismissBTN_Click"/>
            <Button Style="{StaticResource RoundBtn}" x:Name="completeBTN" Content="Complete" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10" Click="completeBTN_Click"/>
        </Grid>
    </Grid>
</Window>
