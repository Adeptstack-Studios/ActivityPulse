<Page x:Class="ActivityPulse.Pages.RemindersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ActivityPulse.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RemindersPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="130" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="225" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Grid.Column="0">
            <StackPanel Orientation="Horizontal">
                <Button Width="180" Height="100" x:Name="addCategoryBtn" Click="addCategoryBtn_Click" Margin="20,0" Style="{StaticResource ModernButton}" Background="#50000000" Content="plus" FontSize="32" FontFamily="{StaticResource FAsolid}" />
                <Button Width="180" Height="100" x:Name="allCategoriesBtn" Click="allCategoriesBtn_Click" Margin="0,0,20,0" Style="{StaticResource ModernButton}" Background="#50000000" >
                    <Button.Content>
                        <Grid Width="180" Height="100">
                            <Border Background="Blue" Margin="10" Padding="7" CornerRadius="15" Height="30" Width="30" HorizontalAlignment="Left" VerticalAlignment="Top">
                                <TextBlock FontSize="15" FontFamily="{StaticResource FAsolid}" Text="bell" VerticalAlignment="Center" HorizontalAlignment="Center" />
                            </Border>
                            <TextBlock Text="All Categories" VerticalAlignment="Bottom" Margin="13,0,0,20" FontSize="15" FontWeight="Medium" />
                        </Grid>
                    </Button.Content>
                </Button>
                <ListBox x:Name="lbCategories" Style="{StaticResource LB_FullHorizontal}" Background="Transparent" SelectionChanged="lbCategories_SelectionChanged" >

                </ListBox>
            </StackPanel>          
        </Grid>

        <Grid Grid.Row="1" Grid.Column="0">
            <ListBox Grid.Row="1" x:Name="lbReminders" Style="{StaticResource LB_vertical}" Background="Transparent" >

            </ListBox>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="20">
                <TextBox Style="{StaticResource DefaultTB}" Height="35" Width="250" Tag="Add a reminder" Margin="0,0,20,0" VerticalContentAlignment="Center" />
                <Button Style="{StaticResource RoundButton}" Width="50" Height="50" Content="plus" Background="Blue" FontFamily="{StaticResource FAsolid}" FontSize="16" />
            </StackPanel>
        </Grid>

        <Grid Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" >
            <StackPanel>
                <TextBlock Text="Reminders" Style="{StaticResource ModeTextBlock}" FontSize="20" Margin="10" FontWeight="Medium" />
                <RadioButton Content="All" Style="{StaticResource CheckRB}" Margin="10,5" />
                <RadioButton Content="Today" Style="{StaticResource CheckRB}" Margin="10,5" />
                <RadioButton Content="Important" Style="{StaticResource CheckRB}" Margin="10,5" />
                <Border Height="1" Background="Gray" Margin="0, 5" />
                <RadioButton Content="Completed" Style="{StaticResource CheckRB}" Margin="10,5" />
            </StackPanel>
            <Border Width="1" Background="Gray" HorizontalAlignment="Left" />
        </Grid>
    </Grid>
</Page>
