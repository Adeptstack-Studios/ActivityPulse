<UserControl x:Class="ActivityPulse.UserControls.CountBoxControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ActivityPulse.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Button x:Name="upBtn" Click="upBtn_Click" Style="{StaticResource OnTopButton}" Content="&#xf077;" FontFamily="{StaticResource FAsolid}" Height="35" />
        <TextBox x:Name="countTb" TextChanged="countTb_TextChanged" Style="{StaticResource CountBox}" Height="50" Margin="0,3" FontSize="32" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontWeight="Medium" InputScope="NumberFullWidth" />
        <Button x:Name="downBtn" Click="downBtn_Click" Style="{StaticResource BelowBottomButton}" Content="&#xf078;" FontFamily="{StaticResource FAsolid}" Height="35" />
    </StackPanel>
</UserControl>
