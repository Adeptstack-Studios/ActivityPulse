<UserControl x:Class="ActivityPulse.UserControls.TimePickerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ActivityPulse.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
    
    <Grid Grid.RowSpan="4" Grid.ColumnSpan="2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="40" />
        </Grid.ColumnDefinitions>
        <TextBox x:Name="tbTime" Style="{StaticResource DefaultTB}" Grid.Column="0" TextChanged="tbTime_TextChanged" Tag="Time (HH:mm)" />
        <Button x:Name="btnPopup" Grid.Column="1" Width="30" Content="clock" Click="btnPopup_Click" FontSize="20" Style="{StaticResource LinkButton}" FontFamily="{StaticResource FAregular}" />
        <Popup PlacementTarget="{Binding ElementName=tbTime}" AllowsTransparency="True" x:Name="popup" Width="200" Height="225" StaysOpen="False" PopupAnimation="Fade" >
            <Border Style="{StaticResource BorderSecondMenu}" CornerRadius="10" >
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
                    <local:CountBoxControl Width="70" Margin="10,0" />
                    <local:CountBoxControl Width="70" Margin="10,0" MinValue="0" MaxValue="59" />
                </StackPanel>
            </Border>
        </Popup>
    </Grid>
</UserControl>
